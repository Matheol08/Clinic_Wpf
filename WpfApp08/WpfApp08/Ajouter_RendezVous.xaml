        <DatePicker HorizontalAlignment="Left" Height="23" Margin="150,165,0,0" VerticalAlignment="Top" Width="157"/>
        <TextBox BorderBrush="#FF0F0F2D" HorizontalAlignment="Left" Margin="30,117,0,0" TextWrapping="Wrap" Text="Debut:" VerticalAlignment="Top" Width="120" IsReadOnly="True" Background="#FF0F0F2D" Foreground="White"/>
        <TextBox BorderBrush="#FF0F0F2D" HorizontalAlignment="Left" Margin="30,168,0,0" TextWrapping="Wrap" Text="Fin:" VerticalAlignment="Top" Width="120" IsReadOnly="True" Background="#FF0F0F2D" Foreground="White"/>

    </Grid>
</Window>
