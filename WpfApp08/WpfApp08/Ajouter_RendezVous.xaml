    <Grid Background="#FF0F0F2D" Margin="0,0,-2,0">
        <TextBox BorderBrush="#FF0F0F2D" HorizontalAlignment="Left" Margin="31,243,0,0" TextWrapping="Wrap" Text="Informations complémentaires:" VerticalAlignment="Top" Width="208" IsReadOnly="True" Background="#FF0F0F2D" Foreground="White" Height="22"/>
